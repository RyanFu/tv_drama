<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape >
            <solid android:color="@color/transparent100" />
            <stroke
                android:color="@color/grid_item_orange"
                android:width="2dp" />
        </shape>
    </item>
    <item>
        <shape >
            <solid android:color="@color/transparent100" />
            <stroke
                android:color="@color/grid_item_round"
                android:width="2dp" />
        </shape>
    </item>
</selector>