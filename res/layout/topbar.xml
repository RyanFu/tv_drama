<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_toptitle"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<RelativeLayout android:id="@+id/relativelayout_toptitle"
	   android:layout_width="fill_parent" 
       android:layout_height="40dp" 
       android:background="@drawable/topbar_bg"
       >
       
       <ImageView android:id="@+id/app_img"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_toLeftOf="@+id/topbar_text"
           android:layout_margin="5dp"
           android:src="@drawable/tv" />
       <TextView android:id="@+id/topbar_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:textSize="20dp"
           android:textStyle="bold"
           android:textColor="@color/white"
           android:text="@string/title"
           />          
	</RelativeLayout>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="2dp"
	    android:background="@color/main_color_orange_light" />

</LinearLayout>

