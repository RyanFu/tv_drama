<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
    android:background="@drawable/grid_item_drama_bg"
    android:padding="5dp"
	>
	<ImageView android:id="@+id/drama_poster"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="1dp"
        android:scaleType="fitCenter" />
	<TextView android:id="@+id/drama_name" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@+id/drama_poster"
		android:paddingLeft="3dp"
		android:paddingBottom="3dp"
		android:lines="1"
		android:textColor="#2a2a2a"
        android:textStyle="bold"
        android:textSize="15dp"
		android:text="戲劇名稱" />
	<TextView android:id="@+id/drama_view" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@+id/drama_name"
        android:paddingLeft="3dp"
        android:paddingBottom="9dp"
        android:lines="1"
        android:textColor="#9a9a9a"
        android:textSize="13dp"
        android:text="播放次數 : 0" />
</RelativeLayout>