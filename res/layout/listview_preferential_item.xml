<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
	    android:id="@+id/ll_preferential"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/white"
	    android:orientation="vertical" >
	    <ImageView android:id="@+id/iv_preferential"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center" />
	    <TextView  android:id="@+id/tv_preferential_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_margin="10dp"
	        android:textSize="18dp"
	        android:textColor="@color/black"/>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.1dp"
	        android:layout_gravity="center"
	        android:layout_marginLeft="8dp"        
	        android:layout_marginRight="8dp"
	        android:background="@color/ticket_center_preferential_seperate"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:weightSum="1.0"
	        android:orientation="horizontal">
	        <Button android:id="@+id/button_serial"
	            android:layout_width="match_parent"
	            android:layout_height="30dp"
	            android:layout_weight="0.5"
	            android:layout_margin="8dp"
	            android:layout_gravity="center"
	            android:background="@drawable/button_exchange"
	            android:textColor="@color/white"
	            android:textSize="17dp"
	            android:text="序號兌換"/>
	        <View 
	            android:layout_width="0.1dp"
	            android:layout_height="match_parent"
	            android:layout_margin="10dp"
	            android:layout_gravity="center"
	            android:background="@color/ticket_center_preferential_seperate"/>
	        <LinearLayout android:id="@+id/ll_more"
	            android:layout_width="match_parent"
	            android:layout_height="30dp"
	            android:layout_margin="8dp"
	            android:layout_gravity="center"
	            android:layout_weight="0.5"
	            android:background="@drawable/button_more_detail"
	            android:gravity="center">
	            <TextView android:id="@+id/tv_preferential_more"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/black"
	                android:textSize="17dp"
	                android:text="展開活動詳情" />
	            <ImageView android:id="@+id/iv_preferential_more"
	                android:layout_width="20dp"
	                android:layout_height="20dp"
	                android:padding="3dp"
	                android:src="@drawable/open"
	                android:scaleType="fitCenter"/>
	        </LinearLayout>
	    </LinearLayout>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.1dp"
	        android:layout_gravity="center"
	        android:layout_marginLeft="8dp"        
	        android:layout_marginRight="8dp"
	        android:background="@color/ticket_center_preferential_seperate"/>
	    <TextView android:id="@+id/tv_preferential_description"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="20dp"
	        android:textSize="18dp"
	        android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
